AlignAfterOpenBracket: Align
AlignConsecutiveAssignments: true
AlignOperands: true
AlignTrailingComments: true
AllowShortFunctionsOnASingleLine: None
BasedOnStyle: LLVM
ColumnLimit: 80
IncludeBlocks: Preserve
IndentPPDirectives: AfterHash
IndentWidth: 4
Language: Cpp
SortIncludes: true
SpacesBeforeTrailingComments: 2
IncludeCategories:
  - Regex: '^<.*\.h>'
    Priority: 2
  - Regex: '^<.*\.hpp>'
    Priority: 2
  - Regex: '^<.*>'
    Priority: 1
  - Regex: '^".*\.h"'
    Priority: 4
  - Regex: '^".*"'
    Priority: 4
  - Regex: '.*'
    Priority: 5
